.form-page {
  background-color: #e9e9e9;
  padding-top: 12rpx;
}

.form-wrap {
  display: block;
  background-color: #fff;
  padding: 40rpx 22rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item label {
  font-size: 28rpx;
  color: #666;
  display: block;
  padding-bottom: 20rpx;
}

.form-item textarea {
  width: 100%;
  color: #464646;
  font-size: 28rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  height: 162rpx;
}

.form-item input {
  color: #444;
  font-size: 28rpx;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  padding: 0 22rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.form-item .must {
  padding-left: 10rpx;
  color: #e64340;
}

.form-item .remark {
  color: #888;
  font-size: 22rpx;
  padding-left: 10rpx;
}

.picker {
  color: #444;
  font-size: 28rpx;
  position: relative;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  padding: 0 22rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.icon-drop {
  position: absolute;
  right: 22rpx;
  z-index: 9;
  top: 50%;
  width: 26rpx;
  height: 14rpx;
  margin-top: -7rpx;
  display: inline-block;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url("data:image/png;base64,");
}

.ident-code {
  display: flex;
}

.ident-code .input {
  width: 224rpx;
  margin-right: 18rpx;
}

.ident-code .image {
  width: 224rpx;
  height: 86rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.ident-code view {
  color: #444;
  font-size: 28rpx;
  line-height: 86rpx;
  margin-left: 10rpx;
  display: inline-block;
}

.ident-code .change-code {
  color: #576b95;
}

.report-submit .button {
  height: 94rpx;
  line-height: 94rpx;
  color: #fff;
  border-radius: 10rpx;
  font-size: 34rpx;
  background-color: #09bb07;
}