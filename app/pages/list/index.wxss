.list-title {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
  padding: 0 24rpx;
}

.list-title text {
  color: #464646;
}

.data-wrapper {
  height: 160rpx;
}

.data-item {
  display: flex;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.data-item:last-child {
  border-bottom: none;
}

.data-item-active {
  background-color: #f7f7f7;
  box-shadow: 0 20rpx 14rpx rgba(247, 247, 247, .5);
}

.data-image .image {
  position: relative;
  width: 212rpx;
  height: 120rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.data-title {
  font-size: 28rpx;
  color: #444444;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 24rpx;
  min-height: 64rpx;
}

.data-desc {
  text-align: right;
  color: #666666;
  font-size: 22rpx;
  line-height: 28rpx;
  position: absolute;
  right: 24rpx;
}

.data-source {
  padding-right: 30rpx;
}

.scroll-wrapper{
  height: 100vh;
}

.icon-time {
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
  margin-right: 10rpx;
  margin-top: -4rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url("data:image/png;base64,");
}